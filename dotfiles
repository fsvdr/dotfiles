__help="
Dotfiles â€” A manager
Usage: dotfiles <command>

where <command> is one of:
  help      -   Displays this banner
  configure -   Runs the entire configuration script on the host machine
"

__configure="
Dotfiles configuration

This command will go through a series of steps to configure the host machine's preferences, setup the development environment and install applications.
"

configure() {
  echo "$__configure"

  configuration-report "[1/5] ğŸ”ƒ Git configuration" git-configure
  configuration-report "[2/5] ğŸ”— Symlink dotfiles" dotfiles-symlink
  configuration-report "[3/5] ğŸ— Environment configuration" environment-configure
  configuration-report "[4/5] ğŸ“² Apps installation" apps-install
  configuration-report "[5/5] âŒ¨ï¸ Editor configuration" editor-configure
}

case "$1" in
  "help" | "-h")    echo "$__help";;
  "configure")      configure;;
  "editor-backup")  editor-packages-backup;;
